{
    "project": {
        "name": "llm-agents-learning",
        "description": "NLP learning repository focused on text representations, embeddings, and sentiment classification using Jupyter notebooks. Beginner-friendly with Windows-first approach and comprehensive fallback patterns.",
        "python": "3.12.5",
        "domain": "Natural Language Processing",
        "audience": "beginners",
        "entryNotebooks": [
            "src/ch1/IntroductiontoAIAgents.ipynb",
            "src/ch1/01_text_representations.ipynb",
            "src/ch1/02_embeddings_visualization.ipynb",
            "src/ch1/03_sentiment_classifier.ipynb"
        ],
        "keyLibraries": [
            "numpy==1.26.4",
            "pandas==2.3.1",
            "matplotlib==3.10.5",
            "seaborn==0.13.2",
            "scikit-learn==1.7.1",
            "nltk==3.9.1",
            "gensim==4.3.3",
            "torch==2.8.0",
            "umap-learn==0.5.9.post2"
        ]
    },
    "guidance": {
        "repositoryInstructionsPath": ".github/copilot-instructions.md",
        "windowsFirst": true,
        "preferPythonFallbacks": true,
        "nltkEnsure": [
            "punkt",
            "punkt_tab"
        ],
        "commonPatterns": [
            "Windows fallback cells under shell cells",
            "Beginner notes before complex cells",
            "Performance warnings for long-running operations",
            "Self-contained notebook execution",
            "DataFrame styling with try/except blocks"
        ]
    },
    "notebooks": {
        "editMode": "json",
        "hideCellIdsInResponses": true,
        "executionOrder": "top-to-bottom",
        "requireBeginnerNotes": true
    },
    "style": {
        "concise": true,
        "avoidHeavyFormatting": true,
        "explanationStyle": "beginner-friendly",
        "codeStyle": "educational"
    },
    "security": {
        "noSecretsInNotebooks": true,
        "noUntrustedDownloads": true,
        "allowShellCommands": false
    },
    "environment": {
        "virtualEnv": ".venv",
        "requirementsFile": "requirements.txt",
        "preferredShell": "pwsh.exe"
    }
}